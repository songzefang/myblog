<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.zhiyou100.servlet.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SettingServlet</servlet-name>
    <servlet-class>com.zhiyou100.servlet.SettingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SettingServlet</servlet-name>
    <url-pattern>/SettingServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BlogList</servlet-name>
    <servlet-class>com.zhiyou100.servlet.BlogList</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BlogList</servlet-name>
    <url-pattern>/admin/BlogList</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>IndexInfo</welcome-file>
  </welcome-file-list>
</web-app>